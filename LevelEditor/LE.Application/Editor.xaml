<Window x:Class="LE.Application.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor" Height="582" Width="778" xmlns:my="clr-namespace:LE.Visuals.Board;assembly=LE.Visuals" xmlns:my1="clr-namespace:LE.Application">
    <Canvas>
        <my1:EditPanel x:Name="EditorPanel" />
        <ListBox Canvas.Left="555" Canvas.Top="30" Height="216" x:Name="FileList" Width="186" Loaded="OnLoadedFileList"/>
        <Label Canvas.Left="555" Canvas.Top="5" Content="Files:" Height="28" Width="132" />
        <Button Canvas.Left="666" Canvas.Top="252" Content="Load" Height="25" Width="75" Click="LoadDataFromDisk" />
        <Label Canvas.Left="555" Canvas.Top="306" Content="Filename:" Height="25" Width="142" />
        <TextBox Canvas.Left="555" Canvas.Top="335" Height="29" x:Name="Filename" Width="186" />
        <Button Canvas.Left="666" Canvas.Top="370" Content="Save" Height="25" Name="button1" Width="75" Click="SaveDataToFile" />
        <Button Canvas.Left="666" Canvas.Top="426" Content="New" Height="25" Name="button2" Width="75" Click="OnNewLevel" />
        <Button Canvas.Left="555" Canvas.Top="486" Content="Play" Height="23" Name="button3" Width="75" Click="button3_Click" />
    </Canvas>
</Window>
